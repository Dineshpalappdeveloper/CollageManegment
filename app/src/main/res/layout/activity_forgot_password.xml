<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB9575"
    android:orientation="vertical"
    tools:context=".Auth.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/forgotBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/back"
        android:padding="2dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Forgot\n Password"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="Provide your Registered Phone Number\n to reset your password "

        android:textSize="20dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/forgot" />
    <TextView
        android:layout_width="match_parent"
        android:text="Phone Number"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back">

        <com.hbb20.CountryCodePicker
            android:id="@+id/forgotCcp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false"
            app:ccp_showPhoneCode="true"

            />

        <EditText
            android:id="@+id/forgotPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:hint="Phone Number"
            android:inputType="number"
            android:paddingStart="5dp" />
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/teal_200"
        app:cardCornerRadius="40dp">

        <Button
            android:id="@+id/forgotBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:padding="2dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>