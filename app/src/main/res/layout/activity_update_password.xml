<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB9575"
    android:orientation="vertical"
    tools:context=".Auth.UpdatePasswordActivity">

    <ImageView
        android:id="@+id/forgotOtpBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/back"
        android:padding="2dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Change\n Credentials"
        android:textSize="55dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:text="New Password"
        android:textSize="20dp"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back">

        <EditText
            android:id="@+id/newPassword1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="New Password"
            android:layout_marginHorizontal="20dp"
            android:inputType="number"
            android:layout_marginBottom="20dp"
            android:paddingStart="5dp" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:text="Confirm Password"
        android:textSize="20dp"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back">

        <EditText
            android:id="@+id/newPassword2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:layout_marginHorizontal="20dp"
            android:inputType="number"
            android:paddingStart="5dp" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/teal_200"
        app:cardCornerRadius="40dp">

        <Button
            android:id="@+id/UpdatePasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:padding="2dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>