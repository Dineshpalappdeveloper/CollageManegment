<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:padding="5dp"
            android:id="@+id/deleteNoticeIcon"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Am Collage"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/deleteNoticeTitle"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
               android:layout_marginRight="5dp"
                android:id="@+id/deleteNoticeMessage"
                android:text="Plesae boy you are connect this application"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
          style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Delete"
            android:id="@+id/deleteNoticeActivityBtn"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textAllCaps="false"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/deleteNoticeImage"
        android:layout_height="wrap_content"/>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>